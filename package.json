{
  "name": "inline-exterminator",
  "version": "1.0.0",
  "description": "Takes inline style tags from input, removes them, and outputs a css file with classes matching inline styles",
  "main": "dist/inline-exterminator.js",
  "scripts": {
    "test": "npm run build && node dist/index.js example.jsp -o example_jsp.css --no-replace modified",
    "build": "babel src --out-dir dist && npm run shebang",
    "shebang": "printf '%s\n%s\n' '#!/usr/bin/env node' \"$(cat dist/index.js)\" > dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flascher/inline-annihilator.git"
  },
  "keywords": [
    "inline",
    "style",
    "remove",
    "remover",
    "extract",
    "css"
  ],
  "author": "Flascher",
  "license": "MIT",
  "preferGlobal": true,
  "bin": {
    "inline-exterminator": "./dist/index.js"
  },
  "bugs": {
    "url": "https://github.com/Flascher/inline-annihilator/issues"
  },
  "homepage": "https://github.com/Flascher/inline-annihilator#readme",
  "dependencies": {
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5",
    "htmlparser": "^1.7.7",
    "soupselect-update": "^0.2.5",
    "sqwish": "^0.2.2",
    "unique-names-generator": "^1.0.13"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "babel-plugin-shebang": "0.0.0",
    "babel-preset-env": "^1.7.0"
  }
}
